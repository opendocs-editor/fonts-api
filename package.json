{
    "name": "opendocs-fonts-api",
    "version": "1.1.1",
    "main": "dist/index.js",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/opendocs-editor/fonts-api"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "eslint": "^8.10.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "axios": "^0.26.0",
        "fs": "^0.0.1-security",
        "http": "^0.0.1-security"
    },
    "scripts": {
        "start": "ts-node src/index.ts",
        "build": "yarn format && yarn fix && yarn clean && tsc -p .",
        "dev": "nodemon src/index.ts",
        "format": "prettier --write .",
        "fcheck": "prettier --check .",
        "clean": "rimraf dist min",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "start:prod": "yarn build && node dist/index.js",
        "prepublish": "yarn format && yarn fix && yarn clean && tsc -p ."
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "node_modules",
        "scripts",
        "src",
        ".eslint*",
        ".prettier*",
        "package.json",
        "tsconfig.json",
        "yarn.lock"
    ]
}
